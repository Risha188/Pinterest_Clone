<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-purple-900 px-9 py-8 text-white">
        <div class="cards flex flex-wrap gap-10">
            <% user.posts.forEach(function(elem){ %>
                <div class="card w-64">
                    <div class="w-full h-46 rounded-lg">
                        <img class="h-full w-full object-cover border-none transition-transform rounded-lg duration-100 hover:scale-110 hover:opacity-70 cursor-pointer" src="/images/uploads/<%= elem.image %>" alt="">
                    </div>
                    <h5 class="mt-2 text-xl"><%= elem.title %></h5>
                </div>
            <% }) %> 
        </div>
    </div>
<% include ./partials/footer.ejs %>